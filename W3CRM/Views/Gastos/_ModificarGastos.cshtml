<div class="modal fade" id="modificarGasto" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modificar Gasto</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="form-validation">
                            <div class="container-fluid p-0">
                                <form class="needs-validation w-100" method="post" novalidate id="formularioModificarGasto">
                                    <!-- ID del Gasto -->
                                    <input type="hidden" id="idGastoModificar">

                                    <div class="mb-3 row">
                                        <label class="col-lg-3 col-form-label" for="nombreGastoModificar">
                                            Nombre del Gasto <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" id="nombreGastoModificar" placeholder="Inserte nombre..." required>
                                            <div class="invalid-feedback">
                                                Por favor inserte el nombre del gasto.
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                        <label class="col-lg-3 col-form-label" for="montoGastoModificar">
                                            Monto <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-9">
                                            <input type="number" class="form-control" id="montoGastoModificar" placeholder="Inserte monto..." step="0.01" required>
                                            <div class="invalid-feedback">
                                                Por favor inserte un monto válido.
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                        <label class="col-lg-3 col-form-label" for="categoriaGastoModificar">
                                            Categoría <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-9">
                                            <select class="form-select" id="categoriaGastoModificar" required>
                                                <option value="" selected disabled>Seleccione una categoría</option>
                                                <!-- Opciones dinámicas llenadas por JavaScript -->
                                            </select>
                                            <div class="invalid-feedback">
                                                Por favor seleccione una categoría.
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                        <label class="col-lg-3 col-form-label" for="fechaGastoModificar">
                                            Fecha del Gasto <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-9">
                                            <input type="date" class="form-control" id="fechaGastoModificar" required>
                                            <div class="invalid-feedback">
                                                Por favor seleccione una fecha válida.
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                        <label class="col-lg-3 col-form-label" for="descripcionGastoModificar">
                                            Descripción
                                        </label>
                                        <div class="col-lg-9">
                                            <textarea class="form-control" id="descripcionGastoModificar" placeholder="Escriba una breve descripción del gasto..."></textarea>
                                            <div class="invalid-feedback">
                                                Por favor inserte una descripción válida.
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Botones de Guardar y Cancelar -->
                                    <div class="mb-12 row">
                                        <div class="col-lg-6">
                                            <button type="submit" class="btn btn-primary py-2 w-100" id="boton_guardarGasto">Guardar</button>
                                        </div>
                                        <div class="col-lg-6">
                                            <button type="button" class="btn btn-secondary py-2 w-100" data-bs-dismiss="modal" id="boton_cancelarGasto">Cancelar</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

