     <script src="~/w3crm/js/demo.js"></script>
     <script src="~/w3crm/js/styleSwitcher.js"></script>

     <script src="~/w3crm/js/custom.js"></script>
     <script src="~/w3crm/js/deznav-init.js"></script>
     <script src="~/w3crm/js/demo.js"></script>

     <script>
         hljs.highlightAll();
         hljs.configure({ ignoreUnescapedHTML: true })

     </script>

     <script>
         document.addEventListener('DOMContentLoaded', (event) => {
             document.querySelectorAll('pre code').forEach((el) => {
                hljs.highlightElement(el);
            });
          });
     </script>

    <script>
        document.getElementById("formulario").addEventListener("submit", function(event) {
            event.preventDefault();
            enviarDatos();
        });

        function enviarDatos() {
            const concepto = document.getElementById("formulario_concepto").value;
            const monto = document.getElementById("formulario_monto").value;
            const fecha = document.getElementById("formulario_fecha").value;
            const categoria = document.getElementById("formulario_categoria").value;

            if (!concepto || !monto || !fecha || !categoria) {
                alert("Por favor, complete todos los campos antes de enviar.");
                return;
            }

            const url = `/GastosController/RegistrarGastos?Concepto=${encodeURIComponent(concepto)}&Monto=${encodeURIComponent(monto)}&Fecha=${encodeURIComponent(fecha)}&Categoria=${encodeURIComponent(categoria)}`;

            fetch(url, {
                method: 'POST'
            })
                .then(response => response.json())
                .then(data => { console.log(data); resetFormulario(); })
                .catch(error => console.error('Error:', error));
        }

        function resetFormulario() {
            document.getElementById("formulario").reset();
        }
    </script>
    <script>
         (function () {
             'use strict'

           // Obtener todos los formularios a los que queremos aplicar estilos de validación de Bootstrap personalizados
            var forms = document.querySelectorAll('.needs-validation')

           //Bucle sobre ellos y evitar la sumisión
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
     </script>
}

