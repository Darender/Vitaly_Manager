@using System.Globalization
@using Vitaly_Manager.Entidades
@using W3CRM.Controllers
@{
    ViewData["Title"] = "RegistrarGastos";
}
<!--**********************************
    Content body start
***********************************-->

<style>
    .small-margin-bottom {
        margin-bottom: -30px; /* Ajusta el valor según sea necesario */
    }
</style>

<div class="content-body">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Gastos</h5></li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "w3crm")">
                    <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.125 6.375L8.5 1.41667L14.875 6.375V14.1667C14.875 14.5424 14.7257 14.9027 14.4601 15.1684C14.1944 15.4341 13.8341 15.5833 13.4583 15.5833H3.54167C3.16594 15.5833 2.80561 15.4341 2.53993 15.1684C2.27426 14.9027 2.125 14.5424 2.125 14.1667V6.375Z" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M6.375 15.5833V8.5H10.625V15.5833" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Inicio
                </a>
            </li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Registrar Gasto</a></li>
        </ol>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Nuevo Gasto</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="needs-validation w-100" action="/GastosController/RegistrarGasto" method="post" novalidate id="formulario">
                                <div class="row mb-3">
                                    <label class="col-md-2 col-form-label" for="formulario_concepto">Concepto</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="formulario_concepto" name="Concepto" placeholder="Descripción del gasto" required>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="col-md-2 col-form-label" for="formulario_monto">Monto</label>
                                    <div class="col-md-10">
                                        <div class="input-group">
                                            <div class="input-group-text">$</div>
                                            <input type="number" step="any" class="form-control" id="formulario_monto" name="Monto" placeholder="0.00" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="col-md-2 col-form-label" for="formulario_fecha">Fecha</label>
                                    <div class="col-md-10">
                                        <input type="date" class="form-control" id="formulario_fecha" name="Fecha" required>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="col-md-2 col-form-label" for="formulario_categoria">Categoría</label>
                                    <div class="col-md-10">
                                        <select class="wide form-control" id="formulario_categoria" name="Categoria" required>
                                            <option selected disabled value="">Por favor seleccione</option>
                                            <option value="Transporte">Transporte</option>
                                            <option value="Alimentación">Alimentación</option>
                                            <option value="Servicio">Servicios</option>
                                            <option value="Materiales">Materiales</option>
                                            <option value="Otros">Otros</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Botón de "Registrar"  -->
                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-primary py-2 w-100" id="boton_registrar">Registrar Gasto</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--**********************************
    Content body end
***********************************-->

