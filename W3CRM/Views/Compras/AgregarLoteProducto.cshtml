document.addEventListener('DOMContentLoaded', (event) => {
    const form = document.getElementById('form-lote-producto');

    form.addEventListener('submit', function (event) {
        event.preventDefault(); // Prevenir el envío normal del formulario

        // Obtener valores del formulario
        const catalogoProducto = document.getElementById("catalogoProducto").value;
        const iva = document.getElementById("iva").value;
        const esMaterial = document.getElementById("esMaterial").value;
        const fechaIngreso = document.getElementById("fechaIngreso").value;
        const fechaVencimiento = document.getElementById("fechaVencimiento").value;
        const cantidad = document.getElementById("cantidad").value;
        const precioVenta = document.getElementById("precioVenta").value;
        const precioCompra = document.getElementById("precioCompra").value;
        const margenGanancia = document.getElementById("margenGanancia").value;

        // Validación del formulario
        if (!form.checkValidity()) {
            event.stopPropagation();
            form.classList.add('was-validated');
            return;
        }

        // Envío mediante AJAX
        $.ajax({
            url: '/Compras/AgregarNuevoLoteProducto',
            type: 'POST',
            data: {
                idCatalogoProd: catalogoProducto,
                IVA: iva,
                esMaterial: esMaterial === "true",
                fechaIngreso: fechaIngreso,
                fechaVencimiento: fechaVencimiento || null,
                cantidad: cantidad,
                precioVenta: precioVenta,
                precioCompra: precioCompra,
                margenGanancia: margenGanancia
            },
            success: function (response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: '¡Lote agregado!',
                        text: response.message,
                        confirmButtonText: 'Aceptar'
                    }).then((result) => {
                        form.reset();
                        form.classList.remove('was-validated');
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message,
                        confirmButtonText: 'Aceptar'
                    });
                }
            },
            error: function (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Hubo un problema al enviar los datos.',
                    confirmButtonText: 'Aceptar'
                });
            }
        });
    });
});

document.getElementById("formulario_costo").addEventListener("input", calcularPrecioVenta);
document.getElementById("formulario_margen").addEventListener("input", calcularPrecioVenta);

function calcularPrecioVenta() {
    var costo = parseFloat(document.getElementById("formulario_costo").value) || 0;
    var margen = parseFloat(document.getElementById("formulario_margen").value) || 0;
    var iva = parseFloat("@ViewBag.IVA") || 0;

    var precioVenta = costo + (costo * margen / 100) + (costo * iva / 100);
    document.getElementById("formulario_precio").value = precioVenta.toFixed(2);
}

</script>


    <script>
        (function () {
          'use strict'

          // Fetch all the forms we want to apply custom Bootstrap validation styles to
          var forms = document.querySelectorAll('.needs-validation')

          // Loop over them and prevent submission
          Array.prototype.slice.call(forms)
            .forEach(function (form) {
              form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                  event.preventDefault()
                  event.stopPropagation()
                }

                form.classList.add('was-validated')
              }, false)
            })
        })()
    </script>
