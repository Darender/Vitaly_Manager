            </li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Agregar Lote Producto</a></li>
        </ol>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Nuevo lote de productos</h4>
                        <form method="post" action="/Compras/AgregarNuevoLoteProducto">
                      </div>
                    <div class="card-body">
                        <div class="form-validation">
                        <div class="container-fluid p-0">
                       
                            <!-- Tipo -->
                            <div class="row mb-3">
                                <label class="col-md-2 col-form-label" for="formulario_tipo">Tipo</label>
                                <div class="col-md-10">
                                    <select class="wide form-control" id="formulario_tipo" name="Tipo" required onchange="cargarProductos()">
                                        <option selected disabled value="">Por favor seleccione</option>
                                        @foreach (var tipo in ViewBag.ListaTipos)
                                        {
                                            <option value="@tipo.ID_TipoProducto">@tipo.Nombre_Tipo_Producto</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <!-- Producto -->
                            <div class="row mb-3">
                                <label class="col-md-2 col-form-label" for="formulario_producto">Producto</label>
                                <div class="col-md-10">
                                    <select class="wide form-control" id="formulario_producto" name="Producto_id" required>
                                        <option selected disabled value="">Por favor seleccione</option>
                                        @foreach (var producto in ViewBag.ListaProductos)
                                        {
                                        <option value="@producto.ID_CatalogoProducto">@producto.Nombre_Producto</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <!-- Cantidad -->
                            <div class="row mb-3">
                                <label class="col-md-2 col-form-label" for="formulario_cantidad">Cantidad</label>
                                <div class="col-md-10">
                                    <input type="number" step="any" class="form-control" id="formulario_cantidad" placeholder="10" name="Cantidad" required>
                                </div>
                            </div>

                            <!-- Costo/Unidad -->
                            <div class="row mb-3">
                                <label class="col-md-2 col-form-label" for="formulario_costo">Costo/Unidad</label>
                                <div class="col-md-10">
                                <div class="input-group">
                                <div class="input-group-text">$</div>
                                    <input type="number" step="any" class="form-control" id="formulario_costo" placeholder="65.5" name="Costo" required>
                                </div>
                             </div>
                          </div>
                            <!-- Fecha de Vencimiento -->
                            <div class="row mb-3">
                                <label class="col-md-2 col-form-label" for="formulario_vencimiento">Vencimiento</label>
                                <div class="col-md-10">
                                    <input name="Vencimiento" class="datepicker-default form-control" id="formulario_vencimiento">
                                </div>
                            </div>

                            <!-- Es material -->
                            <div class="row mb-3">
                                <label class="col-md-2 col-form-label" for="formulario_material">Es material</label>
                                <div class="col-md-10">
                                    <input type="checkbox" class="form-check-input" id="formulario_material" name="EsMaterial">
                                </div>
                            </div>
                            <div class="row mb-3">
                                 
                            <!-- Margen de ganancia calculado --> 
                            <div class="col-md-6 text-center">
                                <label for="formulario_margen">Margen de ganancia (%)</label>
                                 <input type="text" class="form-control text-center" id="formulario_margen" name="MargenGanancia" value="@ViewBag.PrecioVentaSugerido">
                                    </div>
                            <!-- Precio de venta  -->
                            <div class="col-md-6 text-center">
                                <label for="formulario_precio" class="form-label">Precio de venta</label>
                                 <div class="input-group">
                                   <div class="input-group-text">$</div>
                                         <input type="text" class="form-control text-center" id="formulario_precio" name="PrecioVenta" value="@ViewBag.PrecioVentaSugerido">
                                     </div>
                                 </div>
                            <!-- Campo oculto para el IVA -->
                            <input type="hidden" id="formulario_iva" name="IVA" value="@ViewBag.IVA">

                            <!-- Botón de Agregar -->
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary py-2 w-100">Agregar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

