    <script>


        document.getElementById("formulario").addEventListener("submit", function (event) {
            event.preventDefault();
            enviarDatos();
        });

        function enviarDatos() {
            const tipo = document.getElementById("formulario_tipo").value;
            const productoId = document.getElementById("formulario_producto").value;
            const cantidad = document.getElementById("formulario_cantidad").value;
            const costo = document.getElementById("formulario_costo").value;
            const vencimiento = document.getElementById("formulario_vencimiento").value;
            const esMaterial = document.getElementById("formulario_material").checked;
            const margenGanancia = document.getElementById("formulario_margen").value;
            const precioVenta = document.getElementById("formulario_precio").value;

            // Verifica que los campos requeridos no estén vacíos
            if (!tipo || !productoId) {
                alert("Por favor, selecciona el tipo y el producto antes de enviar.");
                return;
            }

            // Para construir la URL con todos los parámetros
            const url = `/ComprasController/AgregarNuevoLoteProducto?Tipo=${encodeURIComponent(tipo)}&Producto_id=${encodeURIComponent(productoId)}&Cantidad=${encodeURIComponent(cantidad)}&Costo=${encodeURIComponent(costo)}&Vencimiento=${encodeURIComponent(vencimiento)}&EsMaterial=${esMaterial}&MargenGanancia=${encodeURIComponent(margenGanancia)}&PrecioVenta=${encodeURIComponent(precioVenta)}`;

            fetch(url, {
                method: 'GET'
            })
                .then(response => response.json())
                .then(data => { console.log(data); resetFormulario(); })
                .catch(error => console.error('Error:', error));
        }
        function resetFormulario() {
            const formulario = document.getElementById("formulario");
            formulario.reset(); // Reinicia todos los campos del formulario

            // Elimina marcas de error 
            const inputs = formulario.querySelectorAll("input, select");
            inputs.forEach(input => {
                input.classList.remove("error"); 
                input.nextElementSibling?.remove(); // Elimina el mensaje de error 
            });

            const productoSelect = document.getElementById("formulario_producto");
            productoSelect.innerHTML = '<option selected disabled value="">Por favor seleccione</option>'; // Resetea el select de productos
        }


function cargarProductos() {
    return new Promise((resolve, reject) => {
        var tipoSeleccionado = document.getElementById("formulario_tipo").value;

        fetch('/ComprasController/ObtenerProductosPorTipo?tipo=' + tipoSeleccionado)
            .then(response => response.json()) 
            .then(data => {
                if (!data || data.length === 0) {
                    throw new Error('No se encontraron productos.');
                }

                var selectProductos = document.getElementById("formulario_producto");
                selectProductos.innerHTML = '<option selected disabled value="">Por favor seleccione</option>';

                data.forEach(producto => {
                    var option = document.createElement("option");
                    option.text = producto.nombre;
                    option.value = producto.iD_Producto;
                    selectProductos.appendChild(option);
                });

                resolve();
            })
            .catch(error => {
                console.error('Error al obtener productos:', error);
                reject(error);
            });
    });
}

document.getElementById("formulario_costo").addEventListener("input", calcularPrecioVenta);
document.getElementById("formulario_margen").addEventListener("input", calcularPrecioVenta);

function calcularPrecioVenta() {
    var costo = parseFloat(document.getElementById("formulario_costo").value) || 0;
    var margen = parseFloat(document.getElementById("formulario_margen").value) || 0;
    var iva = parseFloat("@ViewBag.IVA") || 0;

    var precioVenta = costo + (costo * margen / 100) + (costo * iva / 100);
    document.getElementById("formulario_precio").value = precioVenta.toFixed(2);
}

</script>


    <script>
        (function () {
          'use strict'

          // Fetch all the forms we want to apply custom Bootstrap validation styles to
          var forms = document.querySelectorAll('.needs-validation')

          // Loop over them and prevent submission
          Array.prototype.slice.call(forms)
            .forEach(function (form) {
              form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                  event.preventDefault()
                  event.stopPropagation()
                }

                form.classList.add('was-validated')
              }, false)
            })
        })()
    </script>
