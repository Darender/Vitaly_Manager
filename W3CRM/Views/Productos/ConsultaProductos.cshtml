        hljs.highlightAll();
        hljs.configure({ ignoreUnescapedHTML: true })

    </script>

    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            document.querySelectorAll('pre code').forEach((el) => {
                hljs.highlightElement(el);
            });
        });
    </script>

    <script>
        function modificarClientes(idProducto) {
            $.ajax({
                url: '/Productos/SeleccionarProductoModificar',
                type: 'GET',
                data: { id: idProducto },
                success: function (response) {
                    document.getElementById('idProductoModificar').value = idProducto;
                    document.getElementById('nombreproductoModificar').value = response.nombre_Producto;
                    document.getElementById('proveedorModificar').value = response.iD_Proveedor;
                    document.getElementById('tipoproductoModificar').value = response.iD_TipoProducto;
                    document.getElementById('paginaProductoModificar').value = response.pagina_Producto;
                    document.getElementById('cantidadUnitariaModificar').value = response.cantidad_Unidades;
                    document.getElementById('tipounidadModificar').value = response.iD_TipoUnidad;
                },
                error: function (error) {
                    console.error('Error al obtener los datos del producto:', error);
                }
            });
        }

        (function () {
            'use strict';

            var form = document.getElementById('formularioModificarProducto');
            const idProducto = document.getElementById('idProductoModificar');
            const nombre_Producto = document.getElementById("nombreproductoModificar");
            const iD_Proveedor = document.getElementById("proveedorModificar");
            const iD_TipoProducto = document.getElementById("tipoproductoModificar");
            const pagina_Producto = document.getElementById("paginaProductoModificar");
            const cantidad_Unidades = document.getElementById("cantidadUnitariaModificar");
            const iD_TipoUnidad = document.getElementById("tipounidadModificar");

            if (form) {
                form.addEventListener('submit', function (event) {
                    event.preventDefault();

                    nombre_Producto.classList.remove('is-invalid');
                    iD_Proveedor.classList.remove('is-invalid');
                    iD_TipoProducto.classList.remove('is-invalid');
                    pagina_Producto.classList.remove('is-invalid');
                    cantidad_Unidades.classList.remove('is-invalid');
                    iD_TipoUnidad.classList.remove('is-invalid');

                    if (!form.checkValidity()) {
                        event.stopPropagation();
                        form.classList.add('was-validated');
                    } else {
                        $.ajax({
                            url: '/Productos/ModificarProducto',
                            type: 'POST',
                            data: {
                                idSeleccionado: idProducto.value,
                                nombre: nombre_Producto.value,
                                tipoProducto: iD_TipoProducto.value,
                                proveedor: iD_Proveedor.value,
                                paginaProducto: pagina_Producto.value,
                                cantidadUnitaria: cantidad_Unidades.value,
                                tipounidad: iD_TipoUnidad.value,
                            },
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: '¡Producto modificado!',
                                        text: response.message,
                                        confirmButtonText: 'Aceptar'
                                    }).then((result) => {
                                        form.reset();
                                        form.classList.remove('was-validated');
                                        $('#modificarProducto').modal('hide');
                                        recargarTablaProductos();
                                    });
                                } else {
                                    if (response.errores.includes("nombre")) {
                                        nombre_Producto.classList.add('is-invalid');
                                    }
                                    if (response.errores.includes("cantidad")) {
                                        cantidad_Unidades.classList.add('is-invalid');
                                    }
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Error',
                                        text: response.message,
                                        confirmButtonText: 'Aceptar'
                                    });
                                }
                            },
                            error: function (error) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'Hubo un error al comunicarse con el servidor.',
                                    confirmButtonText: 'Aceptar'
                                });
                            }
                        });
                    }
                }, false);
            }
        })();

        function recargarTablaProductos() {
            $.ajax({
                url: '/Productos/ObtenerProductosActualizados',
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        var tabla = $('#example3 tbody');
                        tabla.empty();

                        response.data.forEach(function (producto) {
                            var fila = `
                            <tr id="${producto.iD_CatalogoProducto}">
                                <td>${producto.nombre_Producto}</td>
                                <td>${producto.tipoProducto}</td>
                                <td>${producto.proveedor}</td>
                                <td>${producto.cantidad_Unidades}</td>
                                <td>${producto.tipoUnidad}</td>
                                <td>${producto.pagina_Producto}</td>
                                <td>
                                    <div class="d-flex">
                                        <a href="javascript:void(0)" class="btn btn-primary shadow btn-xs sharp me-1" data-bs-toggle="modal" data-bs-target="#modificarProducto" onclick="modificarClientes('${producto.iD_CatalogoProducto}')"><i class="fas fa-pencil-alt"></i></a>
                                        <a href="javascript:void(0)" class="btn btn-danger shadow btn-xs sharp" onclick="eliminarProducto('${producto.iD_CatalogoProducto}')"><i class="fa fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                            `;
                            tabla.append(fila);
                        });
                    } else {
                        console.error("Error al obtener los clientes actualizados.");
                    }
                },
                error: function (error) {
                    console.error("Error en la solicitud AJAX:", error);
                }
            });
        }

        // Funcion para eliminar productos de la base de datos
        function eliminarProducto(idProducto) {
            $.ajax({
                url: '/Productos/EliminarProducto',
                type: 'DELETE',
                data: { id: idProducto },
                success: function (response) {
                    if (response.success) {
                        Swal.fire("Éxito", "El producto se eliminó correctamente.", "success");
                        recargarTablaProductos();
                    } else {
                        Swal.fire("Error", response.message, "error");
                    }
                },
                error: function () {
                    Swal.fire("Error", "Hubo un problema al eliminar a el cliente.", "error");
                }
            });
        }
    </script>


    <script>
        (function () {
          'use strict'

          // Fetch all the forms we want to apply custom Bootstrap validation styles to
          var forms = document.querySelectorAll('.needs-validation')

          // Loop over them and prevent submission
          Array.prototype.slice.call(forms)
            .forEach(function (form) {
              form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                  event.preventDefault()
                  event.stopPropagation()
                }

                form.classList.add('was-validated')
              }, false)
            })
        })()
    </script>
}
