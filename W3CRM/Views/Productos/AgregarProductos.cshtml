            <li class="breadcrumb-item active"><a href="javascript:void(0)">Agregar Producto</a></li>
        </ol>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Nuevo Producto</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-validation">
                        <div class="container-fluid p-0">
                                <form class="needs-validation w-100" method="post" novalidate id="formularioAgregarProducto">
                                    <div class="mb-3 row">
                                        <label class="col-lg-2 col-form-label" for="nombreproducto">
                                            Nombre del producto
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-10">
                                            <input type="text" class="form-control" id="nombreproducto" placeholder="Inserte nombre.." required>
                                            <div class="invalid-feedback">
                                                Porfavor inserte el nombre del producto.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-lg-2 col-form-label" for="proveedor">
                                            Proveedor
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-10">
                                            <select class="form-select" id="proveedor" required>
                                                <option value="" selected disabled>Seleccione un proveedor</option>
                                                @foreach (Proveedor proveedor in Model.ListaProveedores)
                                                {
                                                    <option value="@proveedor.ID_Proveedor">@proveedor.Nombre_Proveedor</option>
                                                }
                                            </select>
                                            <div class="invalid-feedback">
                                                Por favor seleccione un proveedor.
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                        <label class="col-lg-2 col-form-label" for="tipoproducto">
                                            Tipo de Producto
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-10">
                                            <select class="form-select" id="tipoproducto" required>
                                                <option value="" selected disabled>Seleccione un tipo de producto</option>
                                                @foreach (TipoProducto item in Model.ListasTipoProductos)
                                                {
                                                    <option value="@item.ID_TipoProducto">@item.Nombre_Tipo_Producto</option>
                                                }
                                            </select>
                                            <div class="invalid-feedback">
                                                Por favor seleccione un tipo de producto.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-lg-2 col-form-label" for="paginaProducto">
                                            Página del Producto
                                        </label>
                                        <div class="col-lg-10">
                                            <textarea class="form-control" id="paginaProducto" placeholder="Escriba información del producto..."></textarea>
                                            <div class="invalid-feedback">
                                                Por favor escriba información válida del producto.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-lg-2 col-form-label" for="cantidadUnitaria">
                                            Cantidad Unitaria
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-10">
                                            <input type="number" class="form-control" id="cantidadUnitaria" placeholder="Inserte cantidad unitaria.." step="0.01" required>
                                            <div class="invalid-feedback">
                                                Por favor inserte una cantidad válida.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-lg-2 col-form-label" for="tipounidad">
                                            Tipo de Unidad
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-10">
                                            <select class="form-select" id="tipounidad" required>
                                                <option value="" selected disabled>Seleccione un tipo de unidad</option>
                                                @foreach (TipoUnidad item in Model.ListaTipoUnidades)
                                                {
                                                    <option value="@item.ID_TipoUnidad">@item.Unidad_Medida</option>
                                                }
                                            </select>
                                            <div class="invalid-feedback">
                                                Por favor seleccione un tipo de unidad.
                                            </div>
                                        </div>
                                    </div>
                                   

                                    <div class="mb-12 row">
                                        <div class="col-lg-12">
                                            <button type="submit" class="btn btn-primary py-2 w-100" id="boton_agregar">Agregar</button>
                                        </div>
                                    </div>
                            </form>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
