     <script>
         (function () {
             'use strict'

           // Obtener todos los formularios a los que queremos aplicar estilos de validación de Bootstrap personalizados
            var forms = document.querySelectorAll('.needs-validation')

           //Bucle sobre ellos y evitar la sumisión
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
     </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            console.log("DOM completamente cargado y listo.");
        });

        function confirmarEliminar(idProveedor) {
            // Confirmación nativa del navegador
            const userConfirmed = confirm("¿Estás seguro de que deseas eliminar este proveedor? Esta acción no se puede deshacer.");

            if (userConfirmed) {
                eliminarProveedor(idProveedor);
            } else {
                console.log("El usuario canceló la eliminación.");
            }
        }

        function eliminarProveedor(idProveedor) {
            console.log("Iniciando proceso de eliminación para ID:", idProveedor);
            const eliminarProveedorUrl = '@Url.Action("EliminarProveedor", "Productos")';

            // Solicitud AJAX para eliminar el proveedor
            $.ajax({
                url: eliminarProveedorUrl,
                type: 'POST',
                data: { idProveedor: idProveedor },
                dataType: 'json',
                success: function (response) {
                    console.log("Respuesta del servidor:", response);
                    if (response.success) {
                        alert("Proveedor eliminado exitosamente.");
                        document.getElementById(idProveedor).remove(); // Elimina la fila
                    } else {
                        alert("Error al eliminar el proveedor: " + response.message);
                    }
                },
                error: function () {
                    alert("Hubo un error en el proceso de eliminación. Intenta de nuevo.");
                }
            });
        }

        function modificarProveedor(idProveedor) {
            console.log("Redirigiendo a la página de modificación para ID:", idProveedor);
            // Ejemplo: redirigir a una página específica
            window.location.href = `/Productos/ModificarProveedor/${idProveedor}`;
        }
    </script>

