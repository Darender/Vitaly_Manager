        </div>
    <!-- Mensaje de error si existe un problema desde el controlador -->
        @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger">@ViewData["Error"]</div>
    }

    <!-- Contenedor principal de la página -->
    <div class="container-fluid">
        <div class="tab-content" id="myTabContent-2">
            <div class="tab-pane fade show active" id="withoutSpace" role="tabpanel" aria-labelledby="home-tab-2">
                <div class="card-body pt-0">
                    <div class="table-responsive">
                        <table id="example3" class="display table" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <!-- Encabezados de la tabla de proveedores -->
                                    <th>Nombre del Proveedor</th>
                                    <th>Teléfono</th>
                                    <th>Página de Contacto</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var proveedor in Model)
                                {
                                    if (proveedor.ID_Proveedor != null)
                                    {
                                        <tr id="@proveedor.ID_Proveedor">
                                            <td>@proveedor.Nombre_Proveedor</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(proveedor.Telefono))
                                                {
                                                    <a href="javascript:void(0);"><strong>@proveedor.Telefono</strong></a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No disponible</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(proveedor.Pagina_Contacto))
                                                {
                                                    <a href="@proveedor.Pagina_Contacto" target="_blank">@proveedor.Pagina_Contacto</a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No disponible</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex">
                                                    <!-- Botón de modificar -->
                                                    <button class="btn btn-primary shadow btn-xs sharp me-1 btn-modificar" onclick="modificarProveedor('@proveedor.ID_Proveedor')">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </button>
                                                    <!-- Botón de eliminar -->
                                                    <button class="btn btn-danger shadow btn-xs sharp btn-eliminar" onclick="confirmarEliminar('@proveedor.ID_Proveedor')">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
