                        option.text = producto.nombre + " - " + producto.proveedor;
                        option.value = producto.id;
                        selectProductos.appendChild(option);
                    });

                    resolve();
                })
                .catch(error => {
                    console.error('Error al obtener productos:', error);
                    reject(error);
                });
            });
        }

