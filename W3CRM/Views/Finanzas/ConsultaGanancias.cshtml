@@using System.Globalization
@using Vitaly_Manager.Entidades
@using W3CRM.Controllers
@{
    ViewData["Title"] = "ConsultaGanancias";
}

<!--**********************************
    Content body start
***********************************-->
<div class="content-body">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Consulta de Ganancias</h5></li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "w3crm")">
                    <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.125 6.375L8.5 1.41667L14.875 6.375V14.1667C14.875 14.5424 14.7257 14.9027 14.4601 15.1684C14.1944 15.4341 13.8341 15.5833 13.4583 15.5833H3.54167C3.16594 15.5833 2.80561 15.4341 2.53993 15.1684C2.27426 14.9027 2.125 14.5424 2.125 14.1667V6.375Z" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M6.375 15.5833V8.5H10.625V15.5833" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Inicio
                </a>
            </li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Consulta de Ganancias</a></li>
        </ol>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <!-- Panel izquierdo -->
                    <div class="col-md-6">
                        <div class="mb-4">
                            <h6>Total de egresos</h6>
                            <h2>$0.00</h2>
                            <!-- Botón para abrir el modal de lista de egresos -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#egresosModal">
                                Lista de egresos
                            </button>
                        </div>
                        <div>
                            <h6>Total de ingresos</h6>
                            <h2>$0.00</h2>
                            <button class="btn btn-primary">Lista de ingresos</button>
                        </div>
                    </div>

                    <!-- Panel derecho -->
                    <div class="col-md-6 text-center">
                        <h6>Ganancias</h6>
                        <h2>$0.00</h2>
                        <div class="chart-container mt-3">
                            <canvas id="gananciasChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de egresos -->
<div class="modal fade" id="egresosModal" tabindex="-1" aria-labelledby="egresosModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="egresosModalLabel">Lista de Egresos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-striped" id="tablaEgresos">
                    <thead>
                        <tr>
                            <th>Descripción</th>
                            <th>Monto</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Las filas se insertarán dinámicamente -->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#agregarEgresoModal">
                    Agregar Egreso
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para agregar un nuevo egreso -->
<div class="modal fade" id="agregarEgresoModal" tabindex="-1" aria-labelledby="agregarEgresoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="agregarEgresoModalLabel">Agregar Nuevo Egreso</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formEgreso" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="concepto" class="form-label">concepto</label>
                        <input type="text" class="form-control" id="concepto" placeholder="Concepto del egreso" required>
                        <div class="invalid-feedback">Por favor, ingrese una descripción.</div>
                    </div>
                    <div class="mb-3">
                        <label for="monto" class="form-label">Monto</label>
                        <input type="number" class="form-control" id="monto" placeholder="Monto del egreso" min="0.01" required>
                        <div class="invalid-feedback">Por favor, ingrese un monto válido.</div>
                    </div>
                    <div class="mb-3">
                        <label for="fecha" class="form-label">Fecha</label>
                        <input type="date" class="form-control" id="fecha" required>
                        <div class="invalid-feedback">Por favor, ingrese una fecha.</div>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!--**********************************
    Content body end
***********************************-->
@section w3crm_style
{
    <link href="~/w3crm/vendor/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="~/w3crm/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">

    <!-- Daterange picker -->
    <link href="~/w3crm/vendor/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">

    <!-- Pick date -->
    <link rel="stylesheet" href="~/w3crm/vendor/pickadate/themes/default.css">
    <link rel="stylesheet" href="~/w3crm/vendor/pickadate/themes/default.date.css">
}

@section w3crm_script
{
    <!--**********************************
        Scripts
    ***********************************-->

    <script src="~/w3crm/vendor/sweetalert2/dist/sweetalert2.min.js"></script>
    <script src="~/w3crm/js/plugins-init/sweetalert.init.js"></script>
    <script src="~/w3crm/js/styleSwitcher.js"></script>

    <!-- Required vendors -->
    <script src="~/w3crm/vendor/global/global.min.js"></script>
    <script src="~/w3crm/vendor/chart.js/Chart.bundle.min.js"></script>
    <script src="~/w3crm/vendor/tagify/dist/tagify.min.js"></script>

    <!-- Apex Chart -->
    <script src="~/w3crm/vendor/apexchart/apexchart.js"></script>

    <!-- Datatable -->
    <script src="~/w3crm/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/w3crm/js/plugins-init/datatables.init.js"></script>
    <script src="~/w3crm/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>

    <!-- code-highlight -->
    <script src="~/w3crm/js/highlight.min.js"></script>

    <!-- momment js is must -->
    <script src="~/w3crm/vendor/moment/moment.min.js"></script>
    <script src="~/w3crm/vendor/bootstrap-daterangepicker/daterangepicker.js"></script>

    <!-- pickdate -->
    <script src="~/w3crm/vendor/pickadate/picker.js"></script>
    <script src="~/w3crm/vendor/pickadate/picker.time.js"></script>
    <script src="~/w3crm/vendor/pickadate/picker.date.js"></script>

    <!-- Pickdate -->
    <script src="~/w3crm/js/plugins-init/pickadate-init.js"></script>
    <script src="~/w3crm/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="~/w3crm/js/custom.js"></script>
    <script src="~/w3crm/js/deznav-init.js"></script>
    <script src="~/w3crm/js/demo.js"></script>
    <script src="~/w3crm/js/styleSwitcher.js"></script>

    <script src="~/w3crm/js/custom.js"></script>
    <script src="~/w3crm/js/deznav-init.js"></script>
    <script src="~/w3crm/js/demo.js"></script>



    <script>
        hljs.highlightAll();
        hljs.configure({ ignoreUnescapedHTML: true })

    </script>

    <script>
        (function () {
          'use strict'

          // Fetch all the forms we want to apply custom Bootstrap validation styles to
          var forms = document.querySelectorAll('.needs-validation')

          // Loop over them and prevent submission
          Array.prototype.slice.call(forms)
            .forEach(function (form) {
              form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                  event.preventDefault()
                  event.stopPropagation()
                }

                form.classList.add('was-validated')
              }, false)
            })
        })()
    </script>



    <script>
        // Configuración del gráfico de ganancias
        const ctx = document.getElementById('gananciasChart').getContext('2d');
        const gananciasChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado', 'Domingo'],
                datasets: [{
                    label: 'Ganancias',
                    data: [0, 0, 0, 0, 0, 0, 0],
                    borderColor: '#4CAF50',
                    tension: 0.4,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    x: {
                        beginAtZero: true
                    },
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>

    <script>
        document.getElementById("formEgreso").addEventListener("submit", function (e) {
            e.preventDefault();

            // Captura de datos del formulario
            const concepto = document.getElementById("concepto").value; 
            const monto = parseFloat(document.getElementById("monto").value);
            const fecha = new Date(document.getElementById("fecha").value).toISOString(); // Formato ISO 8601

            // Validación simple del formulario
            if (!concepto || !monto || !fecha) {
                Swal.fire({
                    title: 'Error',
                    text: 'Por favor, completa todos los campos.',
                    icon: 'error',
                    confirmButtonText: 'Aceptar'
                });
                return;
            }

            // Crear los parámetros de la URL
            const url = `/Finanzas/AgregarGasto?concepto=${encodeURIComponent(concepto)}&monto=${monto}&fecha=${encodeURIComponent(fecha)}`;

            // Enviar los datos al controlador a través de POST (por parámetros de consulta)
            fetch(url, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' } // Aunque estamos enviando por URL, seguimos usando POST
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: 'Éxito',
                        text: data.message,
                        icon: 'success',
                        confirmButtonText: 'Aceptar'
                    }).then(() => {
                        // Agregar la nueva fila en la tabla
                        const tabla = document.getElementById("tablaEgresos").querySelector("tbody");
                        const nuevaFila = `
                            <tr>
                                <td>${concepto}</td>  
                                <td>$${monto.toFixed(2)}</td>
                                <td>${new Date(fecha).toLocaleDateString()}</td>
                                <td>
                                    <!-- Botón de modificar -->
                                    <a href="#javascript:void(0)" class="btn btn-primary shadow btn-xs sharp me-1" data-bs-toggle="modal" data-bs-target="#modificarProveedor" onclick="modificarProveedor"><i class="fas fa-pencil-alt"></i></a>
                                    <!-- Botón de eliminar -->
                                    <button class="btn btn-danger shadow btn-xs sharp btn-eliminar" onclick="confirmarEliminargasto">
                                    <i class="fa fa-trash"></i>
                                </td>
                            </tr>`;
                        tabla.insertAdjacentHTML("beforeend", nuevaFila);

                        // Limpiar el formulario
                        document.getElementById("formEgreso").reset();

                        // Cerrar el modal
                        bootstrap.Modal.getInstance(document.getElementById("agregarEgresoModal")).hide();
                    });
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: data.message,
                        icon: 'error',
                        confirmButtonText: 'Aceptar'
                    });
                }
            })
            .catch(error => {
                console.error("Error al agregar el gasto:", error);
                Swal.fire({
                    title: 'Error',
                    text: 'Ocurrió un error al intentar agregar el gasto.',
                    icon: 'error',
                    confirmButtonText: 'Aceptar'
                });
            });
        });
    </script>


    <script>
        // Función para cargar los egresos al cargar la página
        function cargarEgresos() {
            fetch('/Finanzas/ConsultarGastos')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const tablaCuerpo = document.querySelector("#tablaEgresos tbody");
                        tablaCuerpo.innerHTML = ''; // Limpiar el contenido actual del tbody

                        // Crear y agregar filas dinámicamente
                        data.data.forEach((egreso) => {
                            const fila = `
                                <tr>
                                    <td>${egreso.concepto}</td>
                                    <td>$${egreso.monto.toFixed(2)}</td>
                                    <td>${new Date(egreso.fecha).toLocaleDateString()}</td>
                                    <td>
                                        <a href="javascript:void(0)" class="btn btn-primary shadow btn-xs sharp me-1" onclick="modificarGasto(${egreso.idGasto})">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <button class="btn btn-danger shadow btn-xs sharp" onclick="confirmarEliminarGasto(${egreso.idGasto})">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>`;
                            tablaCuerpo.insertAdjacentHTML('beforeend', fila);
                        });
                    } else {
                        Swal.fire({
                            title: 'Error',
                            text: data.message || 'No se pudieron cargar los egresos.',
                            icon: 'error',
                            confirmButtonText: 'Aceptar'
                        });
                    }
                })
                .catch(error => {
                    console.error('Error al cargar los egresos:', error);
                    Swal.fire({
                        title: 'Error',
                        text: 'Ocurrió un error al cargar los egresos.',
                        icon: 'error',
                        confirmButtonText: 'Aceptar'
                    });
                });
        }

        // Llamar a la función al cargar la página
        document.addEventListener('DOMContentLoaded', cargarEgresos);
    </script>

}

