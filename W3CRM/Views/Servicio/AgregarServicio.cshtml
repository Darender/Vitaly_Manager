    <script>
        hljs.highlightAll();
        hljs.configure({ ignoreUnescapedHTML: true })

    </script>

    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            document.querySelectorAll('pre code').forEach((el) => {
                hljs.highlightElement(el);
            });
        });
    </script>

    <script>
        (function () {
            'use strict';

            var form = document.getElementById('formularioAgregarServicio');
            const nombreServ = document.getElementById("nombreServicio");
            const descripcion = document.getElementById("descripcionServicio");

            if (form) {
                form.addEventListener('submit', function (event) {
                    event.preventDefault();

                    nombreServ.classList.remove('is-invalid');
                    descripcion.classList.remove('is-invalid');

                    if (!form.checkValidity()) {
                        event.stopPropagation();
                    } else {
                        $.ajax({
                            url: '/Servicio/AgregarNuevoServicio',
                            type: 'POST',
                            data: {
                                nombre: nombreServ.value,
                                descripcion: descripcion.value
                            },
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: '¡Servicio agregado!',
                                        text: response.message,
                                        confirmButtonText: 'Aceptar'
                                    }).then((result) => {
                                        form.reset();
                                        form.classList.remove('was-validated');
                                    });
                                } else {
                                    if (response.errores.includes("nombre")) {
                                        nombreProducto.classList.add('is-invalid');
                                    }

                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Error',
                                        text: response.message,
                                        confirmButtonText: 'Aceptar'
                                    });
                                }
                            },
                            error: function (error) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'Hubo un error al comunicarse con el servidor.',
                                    confirmButtonText: 'Aceptar'
                                });
                            }
                        });
                    }

                    form.classList.add('was-validated'); // Aplicar las clases de validación
                }, false);
            }
        })();
    </script>


    <script>
        (function () {
          'use strict'

          // Fetch all the forms we want to apply custom Bootstrap validation styles to
          var forms = document.querySelectorAll('.needs-validation')

          // Loop over them and prevent submission
          Array.prototype.slice.call(forms)
            .forEach(function (form) {
              form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                  event.preventDefault()
                  event.stopPropagation()
                }

                form.classList.add('was-validated')
              }, false)
            })
        })()
    </script>
