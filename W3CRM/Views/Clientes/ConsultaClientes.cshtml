					            <tr>
						            <th>Nombre(s)</th>
						            <th>Apellidos</th>
						            <th>Telefono</th>
						            <th>Edad</th>
						            <th>Genero</th>
						            <th>Accion</th>
                                    <th>Contacto Alternativo</th>
					            </tr>
				            </thead>
				            <tbody>
                                @foreach (Cliente cliente in Model.listaClientes)
                                {
                                    <tr id="@cliente.IdCliente">
                                        <td>@cliente.Nombre</td>
                                        <td>@cliente.Apellidos</td>
                                        <td><a href="javascript:void(0);"><strong>@cliente.Telefono</strong></a></td>
                                        <td>@cliente.Edad</td>
                                        <td>@cliente.Genero</td>
                                        <td>
                                            <div class="d-flex">
