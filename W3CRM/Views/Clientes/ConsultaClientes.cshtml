            $.ajax({
                url: '/Clientes/EliminarCliente',
                type: 'DELETE',
                data: { id: idProducto },
                success: function (response) {
                    if (response.success) {
                        Swal.fire("Éxito", "El cliente se eliminó correctamente.", "success");
                        recargarTablaClientes();
                    } else {
                        Swal.fire("Error", response.message, "error");
                    }
                },
                error: function () {
                    Swal.fire("Error", "Hubo un problema al eliminar a el cliente.", "error");
                }
            });
        }


