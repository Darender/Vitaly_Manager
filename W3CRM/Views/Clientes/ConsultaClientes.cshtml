                                            </div>
                                        </td>

                                        <td>@(string.IsNullOrEmpty(cliente.ContactoAlternativo) ? "No disponible" : cliente.ContactoAlternativo)</td>
                                    </tr>
                                }
				            </tbody>
			            </table>
		            </div>
