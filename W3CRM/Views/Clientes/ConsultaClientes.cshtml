    <script>
        (function () {
            'use strict';

            var form = document.getElementById('formularioAgregarCliente');
            const nombreCliente = document.getElementById("nombreCliente");
            const apellidos = document.getElementById("apellidosCliente");
            const numeroTelefonico = document.getElementById("numeroTelefonico");
            const generoCliente = document.getElementById("genero");
            const contactoAlternativoCliente = document.getElementById("contactoAlternativo");
            const edadCliente = document.getElementById("edad");

            if (form) {
                form.addEventListener('submit', function (event) {
                    event.preventDefault();

                    nombreCliente.classList.remove('is-invalid');
                    apellidos.classList.remove('is-invalid');
                    numeroTelefonico.classList.remove('is-invalid');
                    edadCliente.classList.remove('is-invalid');

                    if (!form.checkValidity()) {
                        event.stopPropagation();
                    } else {
                        $.ajax({
                            url: '/Clientes/AgregarNuevoCliente',
                            type: 'POST',
                            data: {
                                nombre: nombreCliente.value,
                                apellidos: apellidos.value,
                                telefono: numeroTelefonico.value,
                                genero: generoCliente.value,
                                contactoAlternativo: contactoAlternativoCliente.value,
                                edad: edadCliente.value
                            },
                            success: function (response) {
                                if (response.success) {
                                    recargarTablaClientes();
                                    Swal.fire({
                                        icon: 'success',
                                        title: '¡Cliente agregado!',
                                        text: response.message,
                                        confirmButtonText: 'Aceptar'
                                    }).then((result) => {
                                        form.reset();
                                        form.classList.remove('was-validated');
                                    });
                                } else {
                                    if (response.errores.includes("telefono")) {
                                        numeroTelefonico.classList.add('is-invalid');
                                    }
                                    if (response.errores.includes("nombre")) {
                                        nombreCliente.classList.add('is-invalid');
                                    }
                                    if (response.errores.includes("apellidos")) {
                                        apellidos.classList.add('is-invalid');
                                    }
                                    if (response.errores.includes("edad")) {
                                        edadCliente.classList.add('is-invalid');
                                    }
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Error',
                                        text: response.message,
                                        confirmButtonText: 'Aceptar'
                                    });
                                }
                            },
                            error: function (error) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'Hubo un error al comunicarse con el servidor.',
                                    confirmButtonText: 'Aceptar'
                                });
                            }
                        });
                    }

                    form.classList.add('was-validated'); // Aplicar las clases de validación
                }, false);
            }
        })();


        document.getElementById('numeroTelefonico').addEventListener('input', function (e) {
            var value = e.target.value.replace(/[^0-9]/g, '');

            if (value.length > 3) {
                value = value.substring(0, 3) + '-' + value.substring(3);
            }

            if (value.length > 7) {
                value = value.substring(0, 7) + '-' + value.substring(7);
            }

            if (value.length >= 13) {
                value = value.replace(/[-+]/g, '');
                var ultimos4 = value.substring(value.length - 4);
                value = value.substring(0, value.length - 4);
                var ultimos3 = value.substring(value.length - 3);
                value = value.substring(0, value.length - 3);
                var primeros3 = value.substring(value.length - 3);
                value = value.substring(0, value.length - 3);
                value = "+" + value + " " + primeros3 + "-" + ultimos3 + "-" + ultimos4;
            }
            e.target.value = value;
        });


        function recargarTablaClientes() {
    $.ajax({
        url: '/Clientes/ObtenerClientesActualizados', 
        type: 'GET',
        success: function(response) {
            if (response.success) {
                var tabla = $('#example3 tbody');
                tabla.empty(); 

                response.data.forEach(function(cliente) {
                    var fila = `
                            <tr id="${cliente.idCliente}">
                            <td>${cliente.nombre}</td>
                            <td>${cliente.apellidos}</td>
                            <td><a href="javascript:void(0);"><strong>${cliente.telefono}</strong></a></td>
                            <td>${cliente.edad}</td>
                            <td>${cliente.genero}</td>
                            <td>
                                <div class="d-flex">
                                            <a href="javascript:void(0)" class="btn btn-primary shadow btn-xs sharp me-1" data-bs-toggle="modal" data-bs-target="#modificarCliente" onclick="modificarClientes('${cliente.idCliente}')"><i class="fas fa-pencil-alt"></i></a>
                                            <a href="javascript:void(0)" class="btn btn-danger shadow btn-xs sharp" onclick="eliminarCliente('${cliente.idCliente}')"><i class="fa fa-trash"></i></a>
                                </div>
                            </td>
                            <td>${cliente.contactoAlternativo || ''}</td>
                        </tr>
                    `;
                    tabla.append(fila);
                });
            } else {
                console.error("Error al obtener los clientes actualizados.");
            }
        },
        error: function(error) {
            console.error("Error en la solicitud AJAX:", error);
        }
    });
}

        function modificarClientes(idCliente) {
        $.ajax({
            url: '/Clientes/SeleccionarClienteModificar', 
            type: 'GET',
            data: { id: idCliente },
            success: function (response) {
                document.getElementById('idClienteModificar').value = idCliente;
                document.getElementById('nombreClienteModificar').value = response.nombre;
                document.getElementById('apellidosModificar').value = response.apellidos;
                document.getElementById('numeroTelefonicoModificar').value = response.telefono;
                var selectElement = document.getElementById('generoModificar');
                if (response.genero === "Hombre") {
                    selectElement.selectedIndex = 1; 
                } else if (response.genero === "Mujer") {
                    selectElement.selectedIndex = 2;
                } else if (response.genero === "Otro"){
                    selectElement.selectedIndex = 3;
                } else {
                    selectElement.selectedIndex = 0;
                }
                document.getElementById('contactoAlternativoModificar').value = response.contactoAlternativo;
                document.getElementById('edadModificar').value = response.edad;
            },
            error: function (error) {
                console.error('Error al obtener los datos del cliente:', error);
            }
        });
    }

        // Funcion para eliminar productos de la base de datos
