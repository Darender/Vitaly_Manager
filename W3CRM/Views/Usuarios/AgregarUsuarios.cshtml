    <script src="~/w3crm/js/custom.js"></script>
    <script src="~/w3crm/js/deznav-init.js"></script>
    <script src="~/w3crm/js/demo.js"></script>

    

    <script>
        hljs.highlightAll();
        hljs.configure({ ignoreUnescapedHTML: true })

    </script>

    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            document.querySelectorAll('pre code').forEach((el) => {
                hljs.highlightElement(el);
            });
        });
    </script>

    <script>

        (function () {
            'use strict';

            var forms = document.querySelectorAll('.needs-validation');

                Array.prototype.slice.call(forms).forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        event.preventDefault(); // Prevenir el envío normal del formulario

                        // Obtener los valores dentro del evento submit
                        const nombreUsuario = document.getElementById("usuario_nombre");
                        const correo = document.getElementById("usuario_correo");
                        const contraseña = document.getElementById("usuario_contraseña");
                        const rol = document.getElementById("usuario_rol");

            if (!form.checkValidity()) {
                event.stopPropagation();
            } else {
                $.ajax({
                            url: '/Usuarios/AgregarUsuarios',
                    type: 'POST',
                    data: {
                        nombre: nombreUsuario.value,
                        correo: correo.value,
                        contraseña: contraseña.value,
                        rol: rol.value
                    },
                    
                    //Antes de usar includes, se verifica si response.errores es un array con Array.isArray(response.errores). 
                            success: function (response) {
            if (response.success) {
                Swal.fire({
                    icon: 'success',
                    title: '¡Usuario agregado!',
                    text: response.message,
                    confirmButtonText: 'Aceptar'
                }).then((result) => {
                    form.reset();
                    form.classList.remove('was-validated');
                });
            } else {
                // Verificar si `response.errores` está definido y es un array antes de usar `includes`
                if (Array.isArray(response.errores)) {
                    if (response.errores.includes("nombre")) {
                        nombreUsuario.classList.add('is-invalid');
                    }
                    if (response.errores.includes("correo")) {
                        correo.classList.add('is-invalid');
                    }
                    if (response.errores.includes("contraseña")) {
                        contraseña.classList.add('is-invalid');
                    }
                    if (response.errores.includes("rol")) {
                        rol.classList.add('is-invalid');
                    }
                }

                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: response.message,
                    confirmButtonText: 'Aceptar'
                });
            }
        }


            form.classList.add('was-validated'); // Aplicar las clases de validación
        }, false);
    });
})();
        </script>

    <script>
        (function () {
          'use strict'

          // Fetch all the forms we want to apply custom Bootstrap validation styles to
          var forms = document.querySelectorAll('.needs-validation')

          // Loop over them and prevent submission
          Array.prototype.slice.call(forms)
            .forEach(function (form) {
              form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                  event.preventDefault()
                  event.stopPropagation()
                }

                form.classList.add('was-validated')
              }, false)
            })
        })()
    </script>
}
